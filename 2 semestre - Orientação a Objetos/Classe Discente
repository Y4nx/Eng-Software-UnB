package Aprender3;

import Aprender3.Nota;
import java.util.Random;
import java.util.Scanner;

public class Discente extends Perfil {
	private String curso;
	private String matricula;
	private Nota[] notas;
	
	public Discente(String nome, String email, String pais, String cidade, String fusoHorario, 
			String emailOpcional, String genero, String curso, String matricula) {
		super(nome, email, pais, cidade, fusoHorario, emailOpcional, genero);
		this.curso = curso;
		this.matricula = Discente.gerarMatricula();
	}
	
	public String toString() {
        return "[Nome: " + nome + ", Email: " + email + ", País: " + pais + ", Cidade: " + 
	cidade + ", Fuso horário: " + fusoHorario + ", Email opcional: " + emailOpcional + ", "
			+ "Gênero: " + genero + ", Curso: " + curso + "]";
    }
	
	public String getCurso() {
		return curso;
	}

	public String getMatricula() {
		return matricula;
	}
	
	public static String gerarMatricula() {
		
		String caracteres = gerarNumeros(8);
		String matricula = caracteres;
		
		return matricula;
	}
	
	public static String gerarNumeros(int quantidade) {
		StringBuilder resultado = new StringBuilder();
		Random random = new Random();
		String caracteres = "0123456789";
		
		for (int i=0; i<quantidade; i++) {
			char caractere = caracteres.charAt(random.nextInt(caracteres.length()));
			resultado.append(caractere);
		}
		
		return resultado.toString();
	}

	public void cadastrarPerfil() {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite seu nome: ");
        setNome(scanner.nextLine());
        
        System.out.print("Digite o e-mail: ");
        setEmail(scanner.nextLine());

        System.out.print("Digite o país: ");
        setPais(scanner.nextLine());
        
        System.out.print("Digite a cidade: ");
        setCidade(scanner.nextLine());

        System.out.print("Digite o fuso horário: ");
        setFusoHorario(scanner.nextLine());
        
        System.out.print("Digite o e-mail opcional: ");
        setEmailOpcional(scanner.nextLine());
        
        System.out.print("Digite o gênero: ");
        setGenero(scanner.nextLine());
    }
	
	public void atualizarInfo() {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite seu novo nome ");
        setNome(scanner.nextLine());
        
        System.out.print("Digite o novo e-mail: ");
        setEmail(scanner.nextLine());

        System.out.print("Digite o novo país: ");
        setPais(scanner.nextLine());

        System.out.print("Digite a nova cidade: ");
        setCidade(scanner.nextLine());

        System.out.print("Digite o novo fuso horário: ");
        setFusoHorario(scanner.nextLine());

        System.out.print("Digite o novo e-mail opcional: ");
        setEmailOpcional(scanner.nextLine());

        System.out.print("Digite o novo gênero: ");
        setGenero(scanner.nextLine());
    }
}
