package Aprender3;
import java.util.ArrayList;
import java.util.Scanner;
import java.util.List;

public class Materia {
    private String id;
    private String nome;
    private String descricao;
    private String periodo;
    private String chaveMateria;
    private String categoria;
    private Docente professor;
    private boolean status;
    private List<Evento> calendario;
    private List<Nota> notas;
    private List<Discente> alunos;

    public Materia(String id, String nome, String descricao, String periodo, String chaveMateria,
                   String categoria, Docente professor) {
        this.id = id;
        this.nome = nome;
        this.descricao = descricao;
        this.periodo = periodo;
        this.chaveMateria = chaveMateria;
        this.categoria = categoria;
        this.professor = professor;
        this.status = true;
        this.calendario = new ArrayList<>();
        this.notas = new ArrayList<>();
        this.alunos = new ArrayList<>();
    }
    
    public Materia(String id, String nome, String periodo) {
    	this.id = id;
    	this.nome = nome;
    	this.periodo = periodo;
    }

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getDescricao() {
		return descricao;
	}

	public void setDescricao(String descricao) {
		this.descricao = descricao;
	}

	public String getPeriodo() {
		return periodo;
	}

	public void setPeriodo(String periodo) {
		this.periodo = periodo;
	}

	public String getChaveMateria() {
		return chaveMateria;
	}

	public void setChaveMateria(String chaveMateria) {
		this.chaveMateria = chaveMateria;
	}

	public String getCategoria() {
		return categoria;
	}

	public void setCategoria(String categoria) {
		this.categoria = categoria;
	}

	public String toString() {
        return "[Id da Matéria: " + id + ", Nome: " + nome + ", Período: " + periodo + "]";
    }

	public boolean verificarChave(String chaveMateria) {
        return this.chaveMateria.equals(chaveMateria);
    }

    public void criarMateria() {
    	Scanner scanner = new Scanner(System.in);
    	
    	System.out.print("Digite o Id: ");
        setId(scanner.nextLine());
        
        System.out.print("Digite o nome da matéria: ");
        setNome(scanner.nextLine());
        
        System.out.print("Digite a descrição: ");
        setDescricao(scanner.nextLine());
        
        System.out.print("Digite o período: ");
        setPeriodo(scanner.nextLine());
        
        System.out.print("Digite a chave de acesso: ");
        setChaveMateria(scanner.nextLine());
        
        System.out.print("Digite a categoria: ");
        setCategoria(scanner.nextLine());
    }

	public boolean deletarMateria() {
        if (this.status) {
            this.status = false;
            return true;
        }
        return false;
    }

    public void editarMateria() {
    	Scanner scanner = new Scanner(System.in);
    	
    	System.out.print("Digite o novo Id: ");
        setId(scanner.nextLine());
        
        System.out.print("Digite o novo nome da matéria: ");
        setNome(scanner.nextLine());
        
        System.out.print("Digite a nova descrição: ");
        setDescricao(scanner.nextLine());
        
        System.out.print("Digite o novo período: ");
        setPeriodo(scanner.nextLine());
        
        System.out.print("Digite a nova chave de acesso: ");
        setChaveMateria(scanner.nextLine());
        
        System.out.print("Digite a nova categoria: ");
        setCategoria(scanner.nextLine());
  }

        public static Materia cadastrarMateria(Docente professor) {
            Scanner scanner = new Scanner(System.in);

            System.out.println("Cadastro de Matéria:");

            System.out.print("Digite o ID da Matéria: ");
            String id = scanner.nextLine();

            System.out.print("Digite o Nome da Matéria: ");
            String nome = scanner.nextLine();

            System.out.print("Digite a Descrição da Matéria: ");
            String descricao = scanner.nextLine();

            System.out.print("Digite o Período: ");
            String periodo = scanner.nextLine();

            System.out.print("Digite a Chave da Matéria: ");
            String chaveMateria = scanner.nextLine();

            System.out.print("Digite a Categoria da Matéria: ");
            String categoria = scanner.nextLine();

            return new Materia(id, nome, descricao, periodo, chaveMateria, categoria, professor);
        }
}
