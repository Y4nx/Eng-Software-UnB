package Aprender3;

public class Nota {
    private float nota;
    private String nomeMateria;
    private String matricula;

    public Nota(float nota, String nomeMateria, String matricula) {
        this.nota = nota;
        this.nomeMateria = nomeMateria;
        this.matricula = matricula;
    }

    public String toString() {
        return "[Nome da Matéria: " + nomeMateria + ", Nota: " + nota + "]";
    }
    
    public static Nota criarNota(float nota, String nomeMateria, String matricula) {
        return new Nota(nota, nomeMateria, matricula);
    }

    public void mostrarNota() {
        System.out.println("Matrícula: " + matricula);
        System.out.println("Nome da Matéria: " + nomeMateria);
        System.out.println("Nota: " + nota);
    } 

}
